@model ProductVm
   <div class="content">
            <div class="container-fluid">
                <div class="row">

                    <div class="col-md-12">
                        <div class="card">
                            <div class="header">
                                <h4 class="title">Product Detail</h4>
                                <p class="category">List of all stock</p>
                            </div>
                            <div class="content table-responsive table-full-width">
                                <table class="table table-striped">
                                    <tbody>

                                        <tr>
                                            <th>ID</th>
                                            <td>@Model.Id</td>
                                        </tr>

                                        <tr>
                                            <th>Name</th>
                                            <td>@Model.name</td>
                                        </tr>

                                        <tr>
                                            <th>Description</th>
<td>@Model.description</td>                                        </tr>

                                        <tr>
                                            <th>Price</th>
                                            <td>@Model.price</td>
                                        </tr>

                                    

                                        <tr>
                                            <th>Image</th>
                                            <td><img src="~/files/images/@Model.image" alt="" class="img-thumbnail" style="width: 150px;"></td>
                                        </tr>

                                        <tr>
                                            <th>Quantity</th>
                                            <td>@Model.quantity</td>
                                        </tr>
                                    </tbody>

                                </table>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>